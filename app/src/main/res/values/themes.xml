<resources>
    <!-- Base application theme. -->
    <style name="Theme.DrinkFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Default fonts. -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="android:colorPrimary">@color/white</item>
    </style>

    <style name="AppTitleStyle">
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/title_font</item>
        <item name="android:textSize">30sp</item>
    </style>
</resources>